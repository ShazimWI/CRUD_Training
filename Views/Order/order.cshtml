@{
    ViewData["Title"] = "Order";
}
<h1>Add new @ViewData["Title"]</h1>


<!--ADD ORDER FORM-->
<div class="row justify-content-start">
    <div class="col-md-12">
        <div class="card-body">
            <form id="orderForm" enctype="multipart/form-data" class="form-horizontal">
                <div class="row">
                    <div class="row">
                        <div class="col">
                            <!-- Customers Dropdown -->
                            <div class="input-group" id="customersDropdownDiv">
                                <span class="input-group-text" for="Customers">Customers: </span>
                                <select class="form-select" id="Customers" name="Customers" required>
                                    <option value="" selected disabled>Select a Customer</option>
                                    <!-- Add options dynamically here -->
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <!-- Products Dropdown -->
                            <div class="input-group" id="productsDropdownDiv">
                                <span class="input-group-text" for="Products">Products: </span>
                                <select class="form-select" id="Products" name="Products" required>
                                    <option value="" selected disabled>Select a Product</option>
                                    <!-- Add options dynamically here -->
                                </select>
                            </div>
                        </div>
                    </div>


                    <div class="row mt-3">
                        <div class="col">
                            <!-- Quantity -->
                            <div class="input-group" id="quantityDiv">
                                <span class="input-group-text" for="Quantity">Quantity: </span>
                                <input class="form-control" type="number" id="Quantity" name="Quantity" min="1" required />
                            </div>
                        </div>
                        <div class="col">
                            <!-- Date -->
                            <div class="input-group" id="dateDiv">
                                <span class="input-group-text" for="Date">Order Date: </span>
                                <input class="form-control" type="date" id="Date" name="Date" required />
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <!-- Total Price -->
                            <div class="input-group" id="totalPriceDiv">
                                <span class="input-group-text" for="TotalPrice">Total Price: </span>
                                <input class="form-control" type="text" id="TotalPrice" name="TotalPrice" readonly />
                            </div>
                        </div>
                    </div>


                    <!-- Add Button -->
                    <div class="d-flex justify-content-between mt-3">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button id="orderSubmitButton" type="button" class="btn btn-primary">Add Order</button>
                        </div>
                        <div class="justify-content-center">
                            <h3 id="message" class="badge text-bg-dark"></h3>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />

<!--Orders TABLE-->
<div class="mb-5">
    <div class="row justify-content-start">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h2>Orders List</h2>

                    <table id="OrderTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Order NO</th>
                                <th>Customer Name</th>
                                <th>Product Name</th>
                                <th>Order Date</th>
                                <th>Total Amount</th>
                                <th>Added By</th>
                                <th>Added On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Dynamically add the data here by ajax-->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<br />


<!--Delete Modal -->
<div class="modal fade" id="ordDeleteModal" tabindex="-1" aria-labelledby="ordDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ordDeleteModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="dmodalBody">
                <!-- Modal body will be populated dynamically -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="ordModalDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>

